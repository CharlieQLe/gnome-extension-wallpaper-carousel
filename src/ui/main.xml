<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <object class="AdwPreferencesPage" id="general">
        <child>
            <object class="AdwPreferencesGroup">
                <child>
                    <object class="AdwActionRow">
                        <property name="title">Random Initial Wallpaper</property>
                        <property name="subtitle">Choose a random wallpaper from the active list on every boot or refresh</property>
                        <property name="activatable-widget">random_start</property>
                        <child>
                            <object class="GtkSwitch" id="random_start">
                                <property name="valign">center</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwActionRow">
                        <property name="title">Random Wallpaper</property>
                        <property name="subtitle">Choose a random wallpaper from the active list</property>
                        <property name="activatable-widget">random_next</property>
                        <child>
                            <object class="GtkSwitch" id="random_next">
                                <property name="valign">center</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwActionRow">
                        <property name="title">Timer</property>
                        <property name="subtitle">Interval between each wallpaper in seconds</property>
                        <property name="activatable-widget">timer</property>
                        <child>
                            <object class="GtkSpinButton" id="timer">
                                <property name="valign">center</property>
                                <property name="climb_rate">1</property>
                                <property name="digits">0</property>
                                <property name="numeric">true</property>
                                <property name="adjustment">
                                    <object class="GtkAdjustment">
                                        <property name="lower">60</property>
                                        <property name="upper">86400</property>
                                        <property name="step-increment">1</property>
                                        <property name="page-increment">60</property>
                                    </object>
                                </property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
        <child>
            <object class="AdwPreferencesGroup" id="active_wallpaper_list">
                <property name="title">Active Wallpapers</property>
            </object>
        </child>
        <child>
            <object class="AdwPreferencesGroup" id="inactive_wallpaper_list">
                <property name="title">Inactive Wallpapers</property>
            </object>
        </child>
    </object>
</interface>